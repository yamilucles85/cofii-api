{
  "name": "Review",
  "plural": "reviews",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "rating": {
      "type": "number",
      "required": true,
      "default": 1
    },
    "comment": {
      "type": "string"
    },
    "updatedAt": {
      "type": "date",
      "default": "$now"
    },
    "createdAt": {
      "type": "date",
      "default": "$now"
    }
  },
  "scope": {
    "include": [
      { 
        "coffee": ["brand", "variety"] 
      },
      "method", 
      "user"
    ]
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "userId"
    },
    "coffee": {
      "type": "belongsTo",
      "model": "Coffee",
      "foreignKey": "coffeeId"
    },
    "method": {
      "type": "hasOne",
      "model": "PreparationMethod",
      "foreignKey": "methodId"
    }
  },
  "acls": [],
  "methods": {}
}
